{
  "name": "DarkMessenger",
  "version": "1.0",
  "description": "A Dark Mode/Theme for the Facebook Messenger website https://www.messenger.com.",
  "manifest_version": 2,
  "permissions": ["*://www.messenger.com/*"],
  "icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },
  "browser_action": {
    "default_icon": "icons/default-icon.png"
  },
    "content_scripts": [
    {
        "matches": [ "*://www.messenger.com/*"],
        "css": ["MessengerWrapper.css"],
        "all_frames": true
    }
  ],
  "web_accessible_resources": [ "MessengerWrapper.css"]
}
